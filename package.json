{
  "name": "chrome-extension",
  "description": "Publish to the Chrome Web Store.",
  "version": "1.1.2",
  "author": "hyperbola",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wdzeng/chrome-extension"
  },
  "license": "MIT",
  "packageManager": "pnpm@8.6.12",
  "scripts": {
    "build": "pnpm clean && pnpm transpile && cp action.yml dist",
    "transpile": "esbuild src/index.ts --platform=node --target=node16 --minify --bundle --outfile=dist/index.cjs",
    "test": "pnpm clean && pnpm transpile:test && node -r dotenv/config dist/test/index.cjs dotenv_config_path=test/.env.local",
    "transpile:test": "esbuild test/index.ts --platform=node --target=node16 --minify --bundle --outfile=dist/test/index.cjs",
    "lint": "eslint --fix src",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "@types/node": "^16.18.46",
    "esbuild": "^0.19.2",
    "dotenv": "^16.3.1",
    "eslint": "^8.47.0",
    "eslint-config-wdzeng": "github:wdzeng/eslint-config#semver:^0.4.2",
    "prettier": "^3.0.2",
    "typescript": "^5.2.2"
  }
}
